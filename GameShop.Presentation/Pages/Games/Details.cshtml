@page "{id:guid}"
@model GameShop.Presentation.Pages.Games.DetailsModel
@{
    ViewData["Title"] = "Game Details";
}

<h1>Game Details</h1>

<div>
    <h4>@Model.Game.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Game.Description</dd>

        <dt class="col-sm-2">Platform</dt>
        <dd class="col-sm-10">@Model.Game.Platform</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Game.Price.ToString("C")</dd>

        <dt class="col-sm-2">Stock Level</dt>
        <dd class="col-sm-10">@Model.Game.StockLevel</dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>