@page "{id:guid}"
@model GameShop.Presentation.Pages.Games.DetailsModel
@{
    ViewData["Title"] = "Game Details";
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>@Model.Game.Name</h3>
                <span class="breadcrumb"><a asp-page="/Index">Home</a> > <a asp-page="/Games/Index">Shop</a> > @Model.Game.Name</span>
            </div>
        </div>
    </div>
</div>

<div class="single-product section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="left-image">
                    <img src="~/assets/images/single-game.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <h4>@Model.Game.Name</h4>
                <span class="price">@Model.Game.Price.ToString("C")</span>
                <p>@Model.Game.Description</p>
                <form method="post" asp-page="/Index" asp-page-handler="AddToCart">
                    <input type="hidden" name="gameId" value="@Model.Game.Id" />
                    <input type="number" name="quantity" class="form-control" id="1" value="1" min="1" max="@Model.Game.StockLevel" style="width: 70px; display: inline-block; margin-right: 10px;">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-shopping-bag"></i> ADD TO CART</button>
                </form>
                <ul>
                    <li><span>Game ID:</span> @Model.Game.Id</li>
                    <li><span>Platform:</span> <a href="#">@Model.Game.Platform</a></li>
                    <li><span>Stock:</span> @Model.Game.StockLevel</li>
                </ul>
            </div>
            <div class="col-lg-12">
                <div class="sep"></div>
            </div>
        </div>
    </div>
</div>

<div class="more-info">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="tabs-content">
                    <div class="row">
                        <div class="nav-wrapper ">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="description" aria-selected="true">Description</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab" aria-controls="reviews" aria-selected="false">Reviews (0)</button>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                                <p>@Model.Game.Description</p>
                            </div>
                            <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                                <p>There are no reviews for this game yet.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center" style="margin: 20px;">
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>