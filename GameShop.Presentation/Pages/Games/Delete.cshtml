@page "{id:guid}"
@model GameShop.Presentation.Pages.Games.DeleteModel
@{
    ViewData["Title"] = "Delete Game";
}

<h1>Delete Confirmation</h1>
<h3>Are you sure you want to delete this game?</h3>
<div>
    <h4>@Model.Game.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Platform</dt>
        <dd class="col-sm-10">@Model.Game.Platform</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Game.Price.ToString("C")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Game.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>